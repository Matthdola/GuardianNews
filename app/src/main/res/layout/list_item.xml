<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim_dp_8"
        android:paddingTop="@dimen/dim_dp_8">
        <TextView
            android:id="@+id/pillar_name_textview"
            android:layout_width="@dimen/dim_dp_36"
            android:layout_height="@dimen/dim_dp_36"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="@dimen/dim_sp_8"
            android:textColor="@android:color/white"
            android:background="@drawable/pillar_circle"
            android:layout_marginRight="@dimen/dim_dp_5"
            android:layout_marginEnd="@dimen/dim_dp_5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/section_name_textview"
                style="@style/TextViewTheme"
                android:textAllCaps="true"
                android:textColor="@color/textColorGuardianItemWebTitle"
                android:textSize="@dimen/dim_sp_12"
                />
            <TextView
                android:id="@+id/web_title_textview"
                style="@style/TextViewTheme"
                android:maxLines="2"
                android:textSize="@dimen/dim_sp_8"
                />
            <TextView
                android:id="@+id/author_textview"
                style="@style/TextViewTheme"
                android:textSize="@dimen/dim_sp_9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/publication_date_textview"
                style="@style/TextViewTheme"
                android:textColor="@color/textColorGuardianItemWebTitle"
                android:textSize="@dimen/dim_sp_9"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>